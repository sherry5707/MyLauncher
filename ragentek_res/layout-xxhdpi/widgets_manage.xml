<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/new_margin_normal"
    android:layout_marginBottom="@dimen/new_margin_normal"
    android:id="@+id/custom_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:padding="@dimen/new_padding_normal"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_pi_settings_star"
            android:background="@drawable/bg_white_circle" />

    </LinearLayout>
</LinearLayout>