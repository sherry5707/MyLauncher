<com.qingcheng.home.RGKWidgetsRecyclerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgets_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/recycler_padding"
    android:paddingRight="@dimen/recycler_padding"
    android:paddingTop="24dp"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/pi_cell_padding"
        android:paddingRight="@dimen/pi_cell_padding"
        android:clipToPadding="true"
        android:paddingBottom="@dimen/pi_cell_padding"/>

    <!--<RelativeLayout-->
        <!--android:id="@+id/full_screen_view_holder"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:visibility="gone">-->
    <!--</RelativeLayout>-->
    <ImageView
        android:id="@+id/manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:padding="@dimen/new_padding_normal"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_pi_settings_star"
        android:background="@drawable/bg_white_circle"/>
</com.qingcheng.home.RGKWidgetsRecyclerView>