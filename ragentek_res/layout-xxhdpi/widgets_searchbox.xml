<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/new_single_height"
    app:cardBackgroundColor="@color/white_light"
    app:cardCornerRadius="@dimen/pi_card_radius"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp"
    android:layout_marginTop="@dimen/new_margin_normal"
    android:id="@+id/custom_card">

    <RelativeLayout
        android:id="@+id/widget_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/pi_cell_width"
        android:paddingRight="@dimen/pi_cell_width"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:id="@+id/widget_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_pi_search_white"
            android:drawablePadding="@dimen/new_padding_normal"
            android:gravity="center_vertical"
            android:text="@string/hint_input_key_word"
            android:textColor="@color/white_medium"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dip"
            android:src="@drawable/ic_voice_search"
            android:tint="#8A000000"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
