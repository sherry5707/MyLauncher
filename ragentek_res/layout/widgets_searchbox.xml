<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_box_height"
    app:cardBackgroundColor="@color/card_bg"
    app:cardCornerRadius="@dimen/pi_card_radius"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp"
    android:layout_marginTop="@dimen/pi_cell_padding"
    android:layout_marginBottom="@dimen/pi_cell_padding">

    <RelativeLayout
        android:id="@+id/widget_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/pi_cell_width"
        android:paddingRight="@dimen/pi_cell_width"
        android:background="@drawable/blur"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_pi_search"
            android:drawablePadding="13dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:text="@string/hint_input_key_word"
            android:textColor="@color/custom_divider"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dip"
            android:src="@drawable/ic_voice_search"
            android:tint="#8A000000"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
