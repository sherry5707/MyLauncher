<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/overview_panel_item_width"
    android:layout_height="@dimen/overview_panel_item_height"
    android:layout_marginLeft="@dimen/overview_panel_item_width_padding"
    android:layout_marginRight="@dimen/overview_panel_item_width_padding"
    android:scaleType="fitXY"
    android:focusable="true"
    android:longClickable="false"
    android:background="@drawable/qingcheng_overview_item_bg" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <ImageView 
            android:id="@+id/wallpaper_item_extra_image" 
            android:layout_width="@dimen/overview_panel_icon_width" 
            android:layout_height="@dimen/overview_panel_icon_width" 
            android:layout_marginTop="@dimen/overview_panel_paper_text_top"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/wallpaper_item_extra_text"  
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/overview_panel_paper_text_top"
            android:gravity="center"
            android:textColor="@color/workspace_icon_text_color"
            android:textSize="@dimen/overview_panel_textview_textsize" />
    </LinearLayout>

</FrameLayout>